<fieldset>
		<legend>Employment History</legend>
		<%= f.simple_fields_for :employee_jobs do | ej |%>	
			<%= ej.input :employer_name %>
			<%= ej.input :date_from %>
			<%= ej.input :date_to %>
			<%= render 'employment_job_fields', :f=> ej  %>
			<%= ej.hidden_field :_destroy %>
			<%= link_to "remove", '#', class: "remove_step" %>
		<% end %>
		<%= link_to_add_fields "Add Jobs", f, :employee_jobs %>
	</fieldset>