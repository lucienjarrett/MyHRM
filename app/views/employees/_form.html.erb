<style type="text/css">
        body { font-family:Lucida Sans, Arial, Helvetica, Sans-Serif; font-size:13px; margin:20px;}
        #main { width:960px; margin: 0px auto; border:solid 1px #b2b3b5; -moz-border-radius:10px; padding:20px; background-color:#f6f6f6;}
        #header { text-align:center; border-bottom:solid 1px #b2b3b5; margin: 0 0 20px 0; }
        fieldset { border:none; width:320px;}
        legend { font-size:18px; margin:0px; padding:10px 0px; color:#b0232a; font-weight:bold;}
        label { display:block; margin:15px 0 5px;}
        input[type=text], input[type=password] { width:300px; padding:5px; border:solid 1px #000;}
        .prev, .next { background-color:#b0232a; padding:5px 10px; color:#fff; text-decoration:none;}
        .prev:hover, .next:hover { background-color:#000; text-decoration:none;}
        .prev { float:left;}
        .next { float:right;}
        #steps { list-style:none; width:100%; overflow:hidden; margin:0px; padding:0px;}
        #steps li {font-size:24px; float:left; padding:10px; color:#b0b1b3;}
        #steps li span {font-size:11px; display:block;}
        #steps li.current { color:#000;}
        #makeWizard { background-color:#b0232a; color:#fff; padding:5px 10px; text-decoration:none; font-size:18px;}
        #makeWizard:hover { background-color:#000;}
    </style>
		
		
<%= simple_form_for @employee, :input_html => { :id => 'EmployeeSetUpForm' } do |f| %>
  <%= f.error_notification %>
	
		<fieldset>
			<legend>Personal Information</legend>
		<%= f.input :image, as: :file %>    
		<%= f.input :first_name, placeholder: 'John' %>
    <%= f.input :last_name, placeholder: 'Doe' %>  
		<%= f.input :middle_name, placeholder: 'Omar' %>
		<%= f.collection_radio_buttons :gender, [['male', 'Male'] ,['female', 'Female']], :first, :last %><br>
    <%= f.date_field :dob, as: :date %>
		<%= f.association :marital_status, label_method: :name, value_method: :id, include_blank: false, prompt: "Choose a Marital Status" %>
		<%= f.input :mobile_phone %>
	  <%= f.association :bank, label_method: :bank_name, value_method: :id, include_blank: false, prompt: "Choose a Bank" %>
		<div id="hide_bank">
		<%= f.input :bank_account_number,  placeholder: 'bank account number'%>
	  </div>
		<%= f.input :trn, placeholder: '1234567890' %>
		<%= f.input :nis,  placeholder: 'C78956' %>
		<%= f.input :email , placeholder: 'user@domain.com'%>
			<%= f.input :home_address_1 %>
			<%= f.input :home_address_2 %>	
			<%= f.input :city %>
			<%= f.association :parish, label_method: :parish_name, value_method: :id, include_blank: false, prompt: "Choose a Parish" %>
	 </fieldset>
		<fieldset>
			<legend>Contact Information</legend>
		<%= f.simple_fields_for :employee_contacts do | ec |%>
			<%= render 'employee_contact_fields', f: ec %>
		<% end %>
		<%= link_to_add_fields "Add Contacts", f, :employee_contacts %>
		</fieldset>
	
	 <fieldset>
		 <legend>Company Assignment Information</legend>
				<%= f.association :company, label_method: :company_name, value_method: :id, include_blank: false, prompt: "Choose a Company" %>
				<div id="hide_me">
				<%= f.input :location do %>				
				<%= f.grouped_collection_select :location_id, Company.order(:company_name), :locations, :company_name, :id, :location_name, include_blank: false, prompt: "Choose a location" %>
				<% end %>
				</div>
				<%= f.input :employee_number , placeholder: 'employee number'%>
				<%= f.association :department, label_method: :department_name, value_method: :id, include_blank: false, prompt: "Choose a Department" %>
				<%= f.association :position, label_method: :position_name, value_method: :id, include_blank: false, prompt: "Choose a position"%>
				<%= f.association :work_schedule, label_method: :name, value_method: :id, include_blank: false, prompt: "Choose a Work Schedule"%>
				<%= f.input :work_phone%>	
		</fieldset>	
		
	<fieldset>
		<legend>Employment History</legend>
		<%= f.simple_fields_for :employee_jobs do | j |%>
			<%= render 'employee_job_fields', f: j %>
		<% end %>
		<%= link_to_add_fields "Add Jobs", f, :employee_jobs %>
	</fieldset>
	
	<fieldset>
			<legend>Education & Qualifications Information</legend>
		<%= f.simple_fields_for :employee_educations do |emp_edu_form| %>
			<%= render 'employee_education_fields' , f: emp_edu_form  %>
		<% end %>
		<%= link_to_add_fields "Add Education", f, :employee_educations %>
	</fieldset>
  
	<div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>

  <script type="text/javascript">
      $(document).ready(function(){
          $("#EmployeeSetUpForm").formToWizard(); 
      });
  </script>
