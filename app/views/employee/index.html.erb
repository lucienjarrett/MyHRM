<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:middle_name) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:dob) %></th>
      <th><%= model_class.human_attribute_name(:marital_status_id) %></th>
      <th><%= model_class.human_attribute_name(:trn) %></th>
      <th><%= model_class.human_attribute_name(:nis) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:employee_number) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:company_id) %></th>
      <th><%= model_class.human_attribute_name(:department_id) %></th>
      <th><%= model_class.human_attribute_name(:parish_id) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>
      <th><%= model_class.human_attribute_name(:bank_id) %></th>
      <th><%= model_class.human_attribute_name(:home_address_1) %></th>
      <th><%= model_class.human_attribute_name(:home_address_2) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:mobile_phone) %></th>
      <th><%= model_class.human_attribute_name(:work_phone) %></th>
      <th><%= model_class.human_attribute_name(:bank_account_number) %></th>
      <th><%= model_class.human_attribute_name(:position_id) %></th>
      <th><%= model_class.human_attribute_name(:work_schedule_id) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.id, employee_path(employee) %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.middle_name %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.dob %></td>
        <td><%= employee.marital_status_id %></td>
        <td><%= employee.trn %></td>
        <td><%= employee.nis %></td>
        <td><%= employee.email %></td>
        <td><%= employee.employee_number %></td>
        <td><%= employee.image %></td>
        <td><%= employee.company_id %></td>
        <td><%= employee.department_id %></td>
        <td><%= employee.parish_id %></td>
        <td><%= employee.location_id %></td>
        <td><%= employee.bank_id %></td>
        <td><%= employee.home_address_1 %></td>
        <td><%= employee.home_address_2 %></td>
        <td><%= employee.city %></td>
        <td><%= employee.mobile_phone %></td>
        <td><%= employee.work_phone %></td>
        <td><%= employee.bank_account_number %></td>
        <td><%= employee.position_id %></td>
        <td><%= employee.work_schedule_id %></td>
        <td><%= employee.status %></td>
        <td><%=l employee.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employee_path(employee), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
