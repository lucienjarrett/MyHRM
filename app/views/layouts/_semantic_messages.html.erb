<%# Rails flash messages styled for Semantic UI%>
<% flash.each do |key, value| %>
  <% if value.is_a?(String) %>
<div id="message" class="ui <%= key.to_s == 'notice' ? 'success' : 'error' %> <%="message"%>">
    <i class="close icon"></i>
		 <%= content_tag :div, value, :class => "header" %>
    <% value %>
  </div>
<% end %>
<% end %>

